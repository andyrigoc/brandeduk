{
  "version": 2,
  "name": "branded-uk",
  "buildCommand": null,
  "outputDirectory": ".",
  "installCommand": null,
  "framework": null,

  "rewrites": [
    { "source": "/", "destination": "/home-pc.html" },
    { "source": "/detection", "destination": "/index.html" },

    { "source": "/shop", "destination": "/shop-pc.html" },
    { "source": "/shop/productType/:productType", "destination": "/shop-pc.html" },
    { "source": "/shop/brand/:brand", "destination": "/shop-pc.html" },

    { "source": "/product/:code", "destination": "/product-detail.html" },
    
    { "source": "/mobile", "destination": "/index-mobile.html" },
    { "source": "/mobile/customize", "destination": "/mobile/customize-mobile.html" },

    { "source": "/category/:name", "destination": "/shop.html" }
  ],

  "redirects": [
    {
      "source": "/home-pc.html",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/shop-pc.html",
      "destination": "/shop",
      "permanent": true
    },
    {
      "source": "/product-detail.html",
      "destination": "/product",
      "permanent": true
    },
    {
      "source": "/index-mobile.html",
      "destination": "/mobile",
      "permanent": true
    },
    {
      "source": "/mobile/customize-mobile.html",
      "destination": "/mobile/customize",
      "permanent": true
    },
    {
      "source": "/shop.html",
      "destination": "/shop",
      "permanent": true
    }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}
